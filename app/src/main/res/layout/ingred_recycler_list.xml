<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_step"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.ahmed.mybakingapp.Activity.StepActivity"
    android:orientation="vertical"
    android:paddingRight="8dp"
    android:paddingLeft="8dp"
    android:paddingBottom="2dp"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:elevation="2dp"


            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textSize="18sp"
                    android:text="Quantity :"
                    android:gravity="start"
                    android:padding="10dp"
                    />

                <TextView
                    android:id="@+id/ingred_Quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/text1"
                    android:paddingBottom="18dp"
                    android:gravity="center"
                    android:layout_weight="8"
                    android:text="5"
                    android:textColor="@color/blueColor"

                    />

        </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:textSize="18sp"
                            android:text="Measure :"
                            android:gravity="start"
                            android:padding="10dp"

                            />

                        <TextView
                            android:id="@+id/ingred_measure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/text2"
                            android:paddingBottom="18dp"
                            android:gravity="center"
                            android:layout_weight="8"
                            android:text="Cup"
                            android:textColor="@color/blueColor"

                            />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:textSize="18sp"
                            android:text="ingredient :"
                            android:gravity="start"
                            android:padding="10dp"

                            />

                        <TextView
                            android:id="@+id/ingred_ingred"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/text3"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:layout_weight="8"
                            android:text="Cup"
                            android:paddingBottom="18dp"
                            android:textColor="@color/blueColor"
                            />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Click For Details"
                            android:layout_gravity="end"
                            android:background="@color/blueColor"
                            android:textColor="@android:color/white"
                            />
                </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/blueColor"
            ></View>



</LinearLayout>
